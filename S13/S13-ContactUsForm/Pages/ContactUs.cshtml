@page
@model S13_ContactUsForm.Pages.ContactUsModel
@{
}

<div class="row">
    <div class="col-6">
        <div class="col-12">
            <div class="mb-3">
                <label for="name" class="form-label">نام کامل</label>
                <input id="name" type="text" class="form-control" />
            </div>
        </div>
        <div class="col-12">
            <div class="mb-3">
                <label for="mobile" class="form-label">موبایل</label>
                <input id="mobile" type="text" class="form-control" placeholder="0935..."
                       style="text-align: left" />
            </div>
        </div>
        <div class="col-12">
            <div class="mb-3">
                <label for="email" class="form-label">پست الکترونیکی</label>
                <input id="email" type="text" class="form-control" placeholder="name@example.com"
                       style="text-align: left" />
            </div>
        </div>
    </div>
    <div class="col-6">
        <label for="message" class="form-label">پیام</label>
        <textarea id="message" rows="5" class="form-control"></textarea>
    </div>
    <div class="col-12">
        <input type="submit" value="ارسال" class="btn btn-success"/>
        <input type="submit" value="ارسال" class="btn btn-outline-success"/>
        <input type="submit" value="ارسال" class="btn btn-info btn-sm"/>
    </div>

</div>